pipeline {
    agent {
        kubernetes {
            inheritFrom 'jenkins-agent-kubernetes' // Use the appropriate pod template
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jnlp
                image: jenkins/inbound-agent
                command:
                - cat
                tty: true
              - name: shell
                image: alpine  # Using Alpine instead of BusyBox
                command:
                - cat
                tty: true
            """
        }
    }
    stages {
        stage('Run a shell command') {
            steps {
                container('shell') {
                    sh 'set -x && echo "Hello from Kubernetes agent!"'
                }
            }
        }
    }
}




