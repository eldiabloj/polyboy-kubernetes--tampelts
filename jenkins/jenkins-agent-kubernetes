pipeline {
    agent {
        kubernetes {
            inheritFrom 'jenkins-agent-kubernetes' // replace 'default-agent' with the appropriate pod template
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jnlp
                image: jenkins/inbound-agent
                args: ['\$(JENKINS_SECRET)', '\$(JENKINS_NAME)']
            """
        }
    }
    stages {
        stage('Run a shell command') {
            steps {
                container('jnlp') {
                    sh 'set -x && echo "Hello from Kubernetes agent!"'
                }
            }
        }
    }
}
