pipeline {
    agent {
        kubernetes {
            label 'jenkins-agent'
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jenkins-agent
                image: jenkins/inbound-agent
                args: ["-url", "http://<jenkins-master-url>:8080", "-workDir", "/home/jenkins/agent", "<secret>", "<agent-name>"]

            """
        }
    }
    stages {
        stage('Test') {
            steps {
                echo 'Running in a Kubernetes Pod'
            }
        }
    }
}
