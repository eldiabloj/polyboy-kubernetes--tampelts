pipeline {
    agent {
        kubernetes {
            inheritFrom 'jenkins-agent-kubernetes'
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jnlp
                image: jenkins/inbound-agent
                resources:
                  requests:
                    memory: "512Mi"
                    cpu: "500m"
                  limits:
                    memory: "1Gi"
                    cpu: "1000m"
                command:
                - cat
                tty: true
              - name: shell
                image: alpine
                resources:
                  requests:
                    memory: "256Mi"
                    cpu: "250m"
                  limits:
                    memory: "512Mi"
                    cpu: "500m"
                command:
                - cat
                tty: true
            """
        }
    }
    stages {
        stage('Run a shell command') {
            steps {
                container('shell') {
                    // Adding sleep to give time for container initialization
                    echo "Hello from Kubernetes agent!"
                }
            }
        }
    }
}
