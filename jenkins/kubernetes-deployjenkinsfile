pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jenkins-agent
                image: jenkins/inbound-agent
                command:
                - cat
                tty: true
            '''
        }
    }

    environment {
        IMG_NAME = "polybot:${BUILD_NUMBER}"
        JENKINS_URL = 'http://192.168.49.1:8080'
        DOCKER_REGISTRY = "eldiabloj/polybot"
        KUBECONFIG = credentials('kubeSAtoken') // Ensure you have a Kubernetes config credential
    }

    stages {
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Deploy the application to the demo_app namespace using app_deployments.yaml
                    sh "helm install nginx-fe nginx-app-0.1.0.tgz -n jenkins --kubeconfig /root/.kube/config"
                    sh "helm install polybot-be polybot-app-0.0.1.tgz -n jenkins --kubeconfig /root/.kube/config"
                }
            }
        }
    }
}
