pipeline {
    agent {
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jenkins-agent
                image: eldiabloj/dockerfile_agent:latest
                command:
                - cat
                tty: true
            '''
        }
    }

    environment {
        IMG_NAME = "polybot:${BUILD_NUMBER}"
        JENKINS_URL = 'http://192.168.49.1:8081'
        DOCKER_REGISTRY = "eldiabloj/polybot"
        KUBECONFIG = credentials('kubeSAtoken') // Ensure you have a Kubernetes config credential
    }

    stages {
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Deploy the application to the demo_app namespace using app_deployments.yaml
                    sh "helm install nginx-fe /home/oj/PycharmProjects/kubetnetes/nginx-app/nginx-app-0.1.0.tgz -n jenkins --kubeconfig /home/oj/.kube/config -set storage.backend=configmap "
                    sh "helm install polybot-be /home/oj/PycharmProjects/kubetnetes/nginx-app/polybot-app-0.0.1.tgz -n jenkins --kubeconfig /home/oj/.kube/config -set storage.backend=configmap "
                }
            }
        }
    }
}
